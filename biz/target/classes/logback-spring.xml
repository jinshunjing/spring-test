<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 本地开发环境Log目录为/tmp/log/${spring.application.name}/service.log -->
    <!-- 测试、线上环境Log目录为/var/log/${spring.application.name}/service.log -->

    <!-- 获取Spring属性：spring.application.name -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>
    <springProperty scope="context" name="APP_PORT" source="spring.application.port"/>

    <!-- 设置开发环境log目录：/tmp/log -->
    <springProfile name="dev">
        <Property  name="LOG_PATH" value = "/tmp/log"/>
    </springProfile>

    <!-- 设置测试、线上环境log目录：/var/log -->
    <springProfile name="tech,test,prod">
        <Property  name="LOG_PATH" value = "/var/log"/>
    </springProfile>

    <conversionRule conversionWord="ip" converterClass="com.funchain.dapp.config.IPLogConfig" />
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %property{APP_PORT} %logger{30}[%L] [%X{traceId}-%X{spanId}] - %msg%n"/>

    <!-- Console输出-->
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${CONSOLE_LOG_PATTERN}
            </Pattern>
        </encoder>
    </appender>

    <!-- 文件输出-->
    <appender name="FILE-AUDIT"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}/service.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${CONSOLE_LOG_PATTERN}
            </Pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}/service.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- 开发环境日志级别 -->
    <springProfile name="dev">
        <root level="info">
            <appender-ref ref="STDOUT" />
        </root>
    </springProfile>

    <!-- 测试环境日志级别 -->
    <springProfile name="tech,test">
        <root level="info">
            <appender-ref ref="FILE-AUDIT" />
        </root>
    </springProfile>

    <!-- 生产环境日志级别 -->
    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="FILE-AUDIT" />
        </root>
    </springProfile>
</configuration>